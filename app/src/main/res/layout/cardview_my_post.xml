<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewMyPost"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:civ_circle_background_color="@color/grey"
            android:src="@drawable/ic_person" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/textViewTitleMyPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PublicaciÃ³n"
                android:maxLines="1"
                android:textColor="@color/black_700"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewRelativeTimeMyPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 0 minutos"
                android:maxLines="1"
                android:textColor="@color/black_700"
                android:textSize="14dp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewDeleteMyPost"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_clear" />

    </LinearLayout>

</FrameLayout>